{
  "name": "evershop",
  "version": "1.2.2",
  "type": "module",
  "description": "A shopping cart platform with Express, React and Postgres",
  "workspaces": [
    "packages/*",
    "extensions/*",
    "themes/*"
  ],
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./packages/evershop/dist/bin/start/index.js",
    "build": "npm run compile && node ./packages/evershop/dist/bin/build/index.js",
    "compile": "rimraf ./packages/evershop/dist && cd ./packages/evershop && swc ./src/ -d dist/ --config-file .swcrc --copy-files --strip-leading-paths"
  },
  "dependencies": {
    "autoprefixer": "^10.4.14",
    "clsx": "^2.1.1",
    "config": "^4.1.1",
    "cross-env": "^7.0.3",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "glob": "^10.2.7",
    "graphql": "^16.7.1",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.5",
    "pg": "^8.11.1",
    "razorpay": "^2.9.6",
    "react-toastify": "^9.1.3",
    "recharts": "^2.6.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^6.0.1",
    "sharp": "^0.34.5",
    "swc-minify-webpack-plugin": "^2.1.3",
    "tailwindcss": "^3.3.3",
    "tiny-invariant": "^1.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpackbar": "^5.0.1",
    "winston": "^3.9.0",
    "wonka": "^6.3.5"
  },
  "devDependencies": {
    "@parcel/watcher": "^2.0.4",
    "@types/jest": "^29.5.2",
    "cypress": "^15.8.2",
    "execa": "^7.1.1",
    "minimatch": "^10.0.1",
    "prettier": "^3.0.0",
    "webpack-bundle-analyzer": "^4.7.2"
  }
}
